<?xml version="1.0" encoding="utf-8"?><!--
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inventry.Product_Mangment">

</androidx.constraintlayout.widget.ConstraintLayout>

-->
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".inventry.Product_Mangment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Categorary" />

        <Spinner
            android:id="@+id/cat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Sub Categorary" />
    <Spinner
        android:id="@+id/subcat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:layout_weight="0.75"
        android:spinnerMode="dropdown"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text=" Sub Sub Categorary" />
    <Spinner
        android:id="@+id/subsubcat"
        android:layout_width="0dp"
        android:layout_weight="0.75"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="   Upload id prof pic"/>


    <EditText
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Code" />
    <EditText
        android:id="@+id/prodcatid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Product cat" />

    <ImageView
android:background="@drawable/img1"
android:id="@+id/IdProf"
android:layout_height="250dp"
android:layout_marginTop="10dp"
android:layout_width="match_parent"
 />
<!--android:src="@drawable/ic_insert_photo_white_48dp" -->
    <!--android:background="@drawable/button" -->
    <EditText
        android:layout_width="0dp"
        android:layout_weight=".50"
        android:layout_height="wrap_content">

    </EditText>

    <ImageView
        android:background="@drawable/img1"
        android:id="@+id/IdProf1"
        android:layout_height="250dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        />
    <Button

        android:id="@+id/getimagBtn1"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_width="180dp"
        android:text="GetImage"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/white"
        android:textStyle="bold" />
<Button

android:id="@+id/UploadBtn"
android:layout_gravity="center"
android:layout_height="wrap_content"
android:layout_marginTop="15dp"
android:layout_width="180dp"
android:text="Upload"
android:textAppearance="?android:textAppearanceMedium"
android:textColor="@color/white"
android:textStyle="bold" />

</LinearLayout>
</ScrollView>